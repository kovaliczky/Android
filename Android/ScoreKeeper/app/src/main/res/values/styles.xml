<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#1B5E20</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#1B5E20</item>
    </style>

    <style name="linearLayoutStyleFor2player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="playerTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPlayerText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="pointTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/colorPointText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:text">@string/initPoint</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>
</resources>
